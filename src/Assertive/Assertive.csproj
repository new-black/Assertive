<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyTitle>Assertive</AssemblyTitle>
    <AssemblyName>Assertive</AssemblyName>
    <PackageId>Assertive</PackageId>
    <Company>New Black</Company>
    <PackageVersion>0.10.0</PackageVersion>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/new-black/Assertive</PackageProjectUrl>
    <RepositoryUrl>https://github.com/new-black/Assertive</RepositoryUrl>
    <Description>Better and more readable test assertions through the power of C# expressions.</Description>
  </PropertyGroup>
  <PropertyGroup>
    <LangVersion>8</LangVersion>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>
  <ItemGroup>
    <None Include="LICENSE.txt" Pack="true" PackagePath="LICENSE.txt" />
  </ItemGroup>
</Project>